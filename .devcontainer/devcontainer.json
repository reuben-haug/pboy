{
    "name": "Python Dev Environment",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-azuretools.vscode-docker",
                "GitHub.copilot",
                "GitHub.copilot-chat",
                "Git.git",
                "tamasfe.even-better-toml",
                "ms-python.black-formatter",
                "ms-python.flake8",
                "GitHub.vscode-pull-request-github",
                "microsoft.vscode-github-authentication"
            ],
            "settings": {
                "python.pythonPath": "/opt/conda/envs/myenv/bin/python",
                "python.envFile": "${workspaceFolder}/.env",
                "editor.formatOnSave": true,
                "python.linting.flake8Enabled": true,
                "python.linting.enabled": true,
                "security.workspace.trust.enabled": true,
                "security.workspace.trust.untrustedFiles": "open",
                "git.enableCommitSigning": true,
                "git.requireGpgSign": true,
                "git.enableSignedBadge": true
            }
        },
        "codespaces": {
            "repositories": {
                "*": {
                    "trusted": true
                },
                "your-org/*": {
                    "trusted": true,
                    "permissions": "read-all"
                }
            }
        }
    },
    "postCreateCommand": "echo 'conda activate myenv' >> ~/.bashrc && source ~/.bashrc && pip install -e '.[dev,test]'",
    "remoteUser": "vscode",
    "updateRemoteUserUID": true,
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "username": "vscode",
            "upgradePackages": false
        },
        "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
            "moby": true,
            "installDockerBuildx": true,
            "version": "latest",
            "dockerDashComposeVersion": "v2"
        }
    },
    "securityOpt": ["no-new-privileges"],
    "capAdd": [],
    "privileged": false
}