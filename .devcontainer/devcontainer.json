{
    "name": "Python Dev Environment",
    "build": {
      "dockerfile": "../Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-azuretools.vscode-docker"
            ],
            "settings": {
                "python.pythonPath": "/usr/local/bin/python"
            }
        }
    },
    "postCreateCommand": "pip install -r requirements-dev.txt"
  }
  