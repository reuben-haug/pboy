{
    "name": "Python Environment",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.black-formatter",
                "ms-python.isort",
                "ms-python.flake8"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/opt/conda/envs/pboy/bin/python",
                "python.formatting.provider": "black",
                "editor.formatOnSave": true,
                "editor.codeActionsOnSave": {
                    "source.organizeImports": "explicit"
                }
            }
        }
    },
    "postCreateCommand": [
        "/bin/bash",
        "-c",
        ".devcontainer/conda_setup.sh"
    ],
    "postStartCommand": [
        "/bin/bash",
        "-ic",
        "source /opt/conda/etc/profile.d/mamba.sh && mamba shell init --shell bash --root-prefix=/opt/conda && eval \"$(mamba shell hook --shell bash)\" && mamba activate pboy"
    ],
    "remoteUser": "vscode",
    "updateRemoteUserUID": true,
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "username": "vscode",
            "upgradePackages": false
        }
    },
    "securityOpt": ["no-new-privileges"],
    "capAdd": [],
    "privileged": false,
    "remoteEnv": {
        "MAMBA_ROOT_PREFIX": "/opt/conda",
        "MAMBA_EXE": "/opt/conda/bin/mamba"
    }
}